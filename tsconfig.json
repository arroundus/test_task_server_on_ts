{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"config.json",
		"**/*.spec.ts"
	]
}